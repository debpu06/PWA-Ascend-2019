@using EPiServer
@using EPiServer.Core
@using EPiServer.ServiceLocation
@using EPiServer.Web.Routing
@model  PageData

@{var urlResolver = ServiceLocator.Current.GetInstance<UrlResolver>(); }
@foreach (var lang in Model.ExistingLanguages)
{
    string url = urlResolver.GetUrl(Model.ContentLink, lang.TwoLetterISOLanguageName);
    string className = Model.Language == lang ? "current-lang" : "alt-lang";
    <text><a class="@className" href="@url">@lang.NativeName</a> </text>         
}