@model EPiServer.Reference.Commerce.Site.Features.CalendarEvent.ViewModels.CalendarEventViewModel

<section class="main-container">
    <div class="container">
        <h2>@Html.PropertyFor(x => x.CurrentContent.Name)</h2>
        <div class="row">
            <strong>Start Date:</strong>
            <div class="date-heading-section" @Html.EditAttributes(m => m.CurrentContent.StartDate)>
                @Model.CurrentContent.StartDate.ToString("MMMM-dd-yyyy HH:mm tt")
            </div>
            <strong>End Date:</strong>
            <div class="date-heading-section" @Html.EditAttributes(m => m.CurrentContent.EndDate)>
                @Model.CurrentContent.EndDate.ToString("MMMM-dd-yyyy HH:mm tt")
            </div>
        </div>
        <div class="row">
            <strong>Location:</strong>@Html.PropertyFor(x => x.CurrentContent.Location)
        </div>
        <div class="row">
            <h4>@Html.PropertyFor(x => x.CurrentContent.TeaserText)</h4>
        </div>
        <div class="row">
            @Html.PropertyFor(m => m.CurrentContent.MainBody)
        </div>
        <div class="row">
            @Html.PropertyFor(x => x.CurrentContent.MainContentArea)
        </div>
    </div>
</section>