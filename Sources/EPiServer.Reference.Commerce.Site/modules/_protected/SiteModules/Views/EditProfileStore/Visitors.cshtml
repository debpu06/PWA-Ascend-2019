@using EPiServer.Shell.Navigation
@using EPiServer.Web.Mvc.Html

@inherits WebViewPage<EPiServer.Reference.Commerce.Site.modules._protected.SiteModules.ProfileStore.EditProfileStoreViewModel>
@Html.Raw(Html.CreatePlatformNavigationMenu())

<head>
    <title>
        Insight
    </title>
</head>
<style>
    .btn:hover, .btn:focus, .btn.focus {
        background-color: #f7542b !important;
        color: #fff;
    }
    .btn{
        text-align: left;
        width: 100%;
    }

    #chart-container { background-color: #fff; }
    #profile-store-list { background-color: #F1F2F7; }
    .btn-secondary { box-shadow: 0px 0px 10px 0px rgba(200,200,200,1); border-color: transparent; border-radius: 0; background-color: #fff; margin-bottom: 20px; }
    .container { padding: 50px 50px 20px; }
</style>
<div class="row">
    <div id="profile-store-list" class="col-lg-12 col-sm-12">
        <div class="container">
        
            <div class="row" style="margin-left: 0px;margin-right: 0px;">
                <div class="col-lg-12 col-sm-12">
                    <h2 style="margin-top: 10px;">Visitors Overview</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-sm-4">
                        <button type="button" class="btn btn-secondary visit">
                            <span class="overiew"><span class="glyphicon glyphicon-signal"></span> <strong id="numberOfVisit">0</strong> visits, <strong id="numberOfVisitor">0</strong> unique visitors</span>
                        </button>
                        <button type="button" class="btn btn-secondary duration">
                            <span class="overiew"><span class="glyphicon glyphicon-signal"></span> <strong id="avgDuration">0 min 0s</strong> average visit duration</span>
                        </button>
                </div>
                <div class="col-lg-4 col-sm-4">
                        <button type="button" class="btn btn-secondary pageviews">
                            <span class="overiew"><span class="glyphicon glyphicon-signal"></span> <strong id="numberOfPageviews">0</strong> pageviews, <strong id="numberOfUniquePageviews">0</strong> unique pageviews</span>
                        </button>
                        <button type="button" class="btn btn-secondary page">
                            <span class="overiew"><span class="glyphicon glyphicon-signal"></span> <strong id="numberOfMaxPageviews">0</strong> max pageviews <span id="dateRange"></span></span>
                        </button>
                </div>
                <div class="col-lg-4 col-sm-4">
                        <button type="button" class="btn btn-secondary bounced">
                            <span class="overiew"><span class="glyphicon glyphicon-signal"></span> <strong id="bouncedRate">0%</strong> visits have bounced (left after one page view)</span>
                        </button>
                        <button type="button" class="btn btn-secondary search">
                            <span class="overiew"><span class="glyphicon glyphicon-signal"></span> <strong id="numberOfSearch">0</strong> total searches, <strong id="numberOfKeywords">0</strong> unique keywords</span>
                        </button>
                </div>
            </div>
        
        </div>
        <div class="row">
            <div class="col-lg-2 col-sm-2">
            </div>
            <div id="chart-container" class="col-lg-8 col-sm-8">
                <canvas id="chart"></canvas>
            </div>
            <div class="col-lg-2 col-sm-2">
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Assets/Base/Scripts/Features/Visualization.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Visualization.init();
    });
</script>