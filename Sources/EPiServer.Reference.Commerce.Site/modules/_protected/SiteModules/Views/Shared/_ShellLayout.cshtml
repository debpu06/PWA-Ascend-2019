@using System.Web.Optimization
@using EPiServer.Framework.Web.Resources
@using EPiServer.Shell
@using EPiServer.Shell.Web.Mvc.Html
@using EPiServer.Shell.Navigation
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    @Html.Raw(ClientResources.RenderResources("ShellCore"))
    @Html.Raw(ClientResources.RenderResources("ShellWidgets"))
    @Html.Raw(ClientResources.RenderResources("ShellCoreLightTheme"))
    @Html.Raw(ClientResources.RenderResources("Navigation"))
    @Html.Raw(ClientResources.RenderResources("DojoDashboardCompatibility", new[] { ClientResourceType.Style }))
    <link href="@Paths.ToClientResource("SiteModules", "ClientResources/sitemodules/bootstrap/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Paths.ToClientResource("SiteModules", "ClientResources/sitemodules/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Paths.ToClientResource("SiteModules", "ClientResources/sitemodules/style.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/bundles/baseStyle")
    @Styles.Render("~/bundlesMosey/style")
    <style>
        body > .main-container, body > .container {
            padding-top: 50px;
        }

        .mdc-tab {
            font-size:14px !important;
        }
    </style>
</head>
<body>
    @Html.ShellInitializationScript()
   
    @RenderBody()
    <script src="@Paths.ToClientResource("SiteModules", "ClientResources/sitemodules/jquery-3.1.1.min.js")" type="text/javascript"></script>
    <script src="@Paths.ToClientResource("SiteModules", "ClientResources/sitemodules/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Paths.ToClientResource("SiteModules", "ClientResources/sitemodules/jquery.slimscroll.min.js")" type="text/javascript"></script>
    <script src="@Paths.ToClientResource("SiteModules", "ClientResources/sitemodules/orders.js")" type="text/javascript"></script>
    <script src="/Assets/Base/Scripts/Chart.min.js" type="text/javascript"></script>
    <script src="/Assets/Base/Scripts/popper.min.js" type="text/javascript"></script>
    <script src="/Assets/Base/Scripts/d3.min.js" type="text/javascript"></script>
    <script src="/Assets/Base/Scripts/topojson.min.js" type="text/javascript"></script>
    <script src="/Assets/Base/Scripts/datamaps.world.min.js" type="text/javascript"></script>
    @RenderSection("AdditionalScripts", false)
</body>
</html>