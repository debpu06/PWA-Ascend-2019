@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@using EPiServer.Shell.Navigation
@inherits WebViewPage
@Html.Raw(Html.CreatePlatformNavigationMenu())

<head>
    <title>Dashboard</title>
</head>
<div class="container dashboard-container">
    <div class="content-header row">
        <h4>Dashboard</h4>
    </div>
    <div class="container">
        <div class="row conversions-section">
            <h4>Conversions</h4>
            <div class="row">
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-body easypiechart-panel">
                            <h4>Recipient lists</h4>
                            <h2 class="campaign-recipient-list">No data</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-body easypiechart-panel">
                            <h4>Place holder</h4>
                            <h2 class="">No data</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-body easypiechart-panel">
                            <h4>Place holder</h4>
                            <h2 class="">No data</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row statistics-section">
            <h4>Statistics</h4>
            <div class="row">
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Amount of emails sent
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive campaign-emails-table">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Emails sent</th>
                                            <th>Click count</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section AdditionalScripts
{
    <script type="text/javascript" src="~/Assets/Base/Scripts/Features/Selective/CampaignDashboard.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        CampaignDashboard.init();
    });
    </script>
}